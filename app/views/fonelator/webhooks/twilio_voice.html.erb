<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <Dial>
    <% if ENV["TWILIO_FORWARD_SIP"] && ENV["TWILIO_FORWARD_SIP_USERNAME"] %>
      <Sip username="<%= ENV['TWILIO_FORWARD_SIP_USERNAME'] %>" password="<%= ENV['TWILIO_FORWARD_SIP_PASSWORD'] %>">
        <%= ENV["TWILIO_FORWARD_SIP"] %>
      </Sip>
    <% elsif ENV["TWILIO_FORWARD_SIP"] %>
      <Sip><%= ENV["TWILIO_FORWARD_SIP"] %></Sip>
    <% else %>
      <Number><%= ENV["TWILIO_FORWARD_NUMBER"] %></Number>
    <% end %>
  </Dial>
</Response>