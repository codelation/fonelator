<?xml version="1.0" encoding="UTF-8"?>
<Response>  
  <% if @outgoing_number %>
    <Dial callerId="<%= @caller_id %>">
      <Number><%= @outgoing_number %></Number>
    </Dial>
  <% else %>
    <Say voice="woman">Codelators. Mount up!</Say>
    <Pause />
    <Gather method="POST" action="/fonelator/webhooks/twilio_voice_out">
      <Say voice="woman">Please enter the number you would like to call and then press pound.</Say>
    </Gather>
  <% end %>
</Response>